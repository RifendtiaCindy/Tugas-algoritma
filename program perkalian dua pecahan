#include <iostream>

using namespace std;

typedef struct pecahan

{
    int pb;
    int py;
};
int main (int argc, char*argv[])
{
    pecahan P1,P2,P3;
    cout<< "Masukkan Pb P1 =";
    cin>> P1.pb; // pembilang P1
    cout<< "Masukkan Py P1=";
    cin>>P1.py; //penyebut P1

    cout<< "\t"<<P1.pb<<endl;
    cout<< "\tP1=-"<< endl;
    cout<< "\t"<<P1.py<<endl;

    cout<< "\nMasukkan Pb P2 =";
    cin>> P2.pb; // pembilang P2
    cout<< " Masukkan Py P2 =";
    cin>>P2.py; //penyebut P2

    cout<< "\t"<<P2.pb<<endl;
    cout<< "tP2=-"<<endl;
    cout<< "\t"<<P2.py<<endl;

    P3.pb = P1.pb*P2.py+P1.py*P2.pb; //rumus penjumlahan pecahan

    cout<< "Hasil penjumlahan P1+P2"<<endl;
    cout<<"\t" << P3.pb<<endl;
    cout<< "\tP3=-"<<endl;
    cout<< "\t"<< P3.py<<endl;
    return 0;
}
